<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewModels="clr-namespace:Sniffer.ViewModels"
             x:Class="Sniffer.View.Pages.HomePage"
             Title="Home"
             x:DataType="ViewModels:HomeViewModel">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="DisabledButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#999999" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Label x:Name="timerLabel" Text="{Binding TimerText}" FontSize="100" HorizontalOptions="CenterAndExpand"/>
        <StackLayout Orientation="Horizontal">
            <Button Text="Start" Command="{Binding  StartSnifferCommand}" HorizontalOptions="CenterAndExpand"
                    IsEnabled="{Binding IsStartButtonEnabled}" />
            <Button Text="Stop" Command="{Binding  StopSnifferCommand}" HorizontalOptions="CenterAndExpand"
                    IsEnabled="{Binding IsStopButtonEnabled}"/>
        </StackLayout>
    </StackLayout>
    
</ContentPage>
